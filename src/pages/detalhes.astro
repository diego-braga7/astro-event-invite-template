---
import Layout from '../components/Layout.astro';
import Section from '../components/Section.astro';
import InfoCard from '../components/InfoCard.astro';
import Button from '../components/Button.astro';
import { event } from '../config/event';
---

<Layout title="Detalhes" description={`Data, horário e local do aniversário do ${event.nome_da_crianca}.`}>
  <Section title="Detalhes do evento" description="Tudo que você precisa para chegar e aproveitar.">
    <div class="grid gap-4 lg:grid-cols-3">
      <InfoCard title="Data e horário">
        <p class="text-lg font-medium text-slate-900">
          {event.data} • {event.horario}
        </p>
      </InfoCard>

      <InfoCard title="Endereço">
        <p class="font-medium text-slate-900">{event.endereco}</p>
        <p class="mt-1">{event.cidade}</p>
      </InfoCard>

      <InfoCard title="Mapa">
        <p>Abra o endereço no aplicativo de mapas.</p>
        <div class="mt-3">
          <Button href={event.google_maps_link} target="_blank" rel="noreferrer" variant="primary">
            Abrir no Maps
          </Button>
        </div>
      </InfoCard>
    </div>
  </Section>
</Layout>

