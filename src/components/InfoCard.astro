---
export interface Props {
  title: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<div class:list={['rounded-2xl border border-slate-200 bg-white p-5 shadow-sm', className]}>
  <h3 class="font-display text-lg">{title}</h3>
  <div class="mt-3 text-slate-700">
    <slot />
  </div>
</div>

