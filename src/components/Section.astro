---
export interface Props {
  title?: string;
  description?: string;
  class?: string;
}

const { title, description, class: className } = Astro.props;
---

<section class:list={['mx-auto max-w-5xl px-4 py-10', className]}>
  {title ? (
    <header class="mb-6">
      <h2 class="text-2xl font-display">{title}</h2>
      {description ? <p class="mt-2 text-slate-700">{description}</p> : null}
    </header>
  ) : null}
  <slot />
</section>

