---
import Button from './Button.astro';
import { event } from '../config/event';

export interface Props {
  ctaHref: string;
}

const { ctaHref } = Astro.props;
---

<section class="mx-auto max-w-5xl px-4 py-12">
  <div class="rounded-3xl border border-slate-200 bg-white p-7 shadow-sm sm:p-10">
    <p class="text-sm font-medium text-slate-600">Convite</p>
    <h1 class="mt-2 text-3xl font-display sm:text-4xl">
      Aniversário do {event.nome_da_crianca}, {event.idade} anos
    </h1>
    <p class="mt-4 max-w-2xl text-slate-700">{event.texto_convite}</p>
    <div class="mt-6 flex flex-col gap-3 sm:flex-row sm:items-center">
      <Button href={ctaHref} variant="primary" size="lg">Confirmar presença</Button>
      <Button href="/detalhes" variant="ghost" size="lg">Ver detalhes</Button>
    </div>
    <dl class="mt-8 grid gap-4 sm:grid-cols-3">
      <div>
        <dt class="text-xs uppercase tracking-wide text-slate-500">Data</dt>
        <dd class="mt-1 font-medium text-slate-900">{event.data}</dd>
      </div>
      <div>
        <dt class="text-xs uppercase tracking-wide text-slate-500">Horário</dt>
        <dd class="mt-1 font-medium text-slate-900">{event.horario}</dd>
      </div>
      <div>
        <dt class="text-xs uppercase tracking-wide text-slate-500">Cidade</dt>
        <dd class="mt-1 font-medium text-slate-900">{event.cidade}</dd>
      </div>
    </dl>
  </div>
</section>

